<script>

    function showlinks() {
        document.getElementById("barbox").style.display = 'none';
        document.getElementById("crossbox").style.display = 'inline-block';
        document.getElementById("links").style.display = 'inline-block';
    }
    
    function hidelinks() {
        document.getElementById("barbox").style.display = 'inline-block';
        document.getElementById("crossbox").style.display = 'none';
        document.getElementById("links").style.display = 'none';
    }
    
    function a1() {
        document.getElementById("imagea1").style.display = 'block';
        document.getElementById("imagea2").style.display = 'none';
        document.getElementById("imagea3").style.display = 'none';
        document.getElementById("circlea1").classList.add('viewing');
        document.getElementById("circlea1").classList.remove('notviewing');
        document.getElementById("circlea2").classList.remove('viewing');
        document.getElementById("circlea2").classList.add('notviewing');
        document.getElementById("circlea3").classList.remove('viewing');
        document.getElementById("circlea3").classList.add('notviewing');
    }
    function a2() {
        document.getElementById("imagea1").style.display = 'none';
        document.getElementById("imagea2").style.display = 'block';
        document.getElementById("imagea3").style.display = 'none';
        document.getElementById("circlea1").classList.remove('viewing');
        document.getElementById("circlea1").classList.add('notviewing');
        document.getElementById("circlea2").classList.add('viewing');
        document.getElementById("circlea2").classList.remove('notviewing');
        document.getElementById("circlea3").classList.remove('viewing');
        document.getElementById("circlea3").classList.add('notviewing');
    }
    function a3() {
        document.getElementById("imagea1").style.display = 'none';
        document.getElementById("imagea2").style.display = 'none';
        document.getElementById("imagea3").style.display = 'block';
        document.getElementById("circlea1").classList.remove('viewing');
        document.getElementById("circlea1").classList.add('notviewing');
        document.getElementById("circlea2").classList.remove('viewing');
        document.getElementById("circlea2").classList.add('notviewing');
        document.getElementById("circlea3").classList.add('viewing');
        document.getElementById("circlea3").classList.remove('notviewing');
    }
