        document.getElementById("images1").style.display = 'block';
        document.getElementById("images2").style.display = 'none';
        document.getElementById("circles1").classList.add('viewing');
        document.getElementById("circles1").classList.remove('notviewing');
        document.getElementById("circles2").classList.remove('viewing');
        document.getElementById("circles2").classList.add('notviewing');
    }
    function s2() {
        document.getElementById("images1").style.display = 'none';
        document.getElementById("images2").style.display = 'block';
        document.getElementById("circles1").classList.remove('viewing');
        document.getElementById("circles1").classList.add('notviewing');
        document.getElementById("circles2").classList.add('viewing');
        document.getElementById("circles2").classList.remove('notviewing');
    }
